{
  "name": "playvi",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://dbilgili.github.io/PlayVi",
  "dependencies": {
    "axios": "^0.18.0",
    "body-scroll-lock": "^2.6.1",
    "firebase": "^9.14.0",
    "lodash.isequal": "^4.5.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-html-parser": "^2.0.2",
    "react-scripts": "2.1.8",
    "react-transition-group": "^2.6.1",
    "scroll-lock": "^2.1.0",
    "swipe-js-iso": "^2.1.5",
    "use-debounce": "^1.1.1",
    "uselog-hook": "^1.1.0"
  },
  "scripts": {
    "build-css": "stylus -c src/assets/stylus/ --out src/assets/stylus",
    "watch-css": "npm run build-css && stylus -c -w src/assets/stylus/ --out src/assets/stylus",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "heroku-postbuild": "npm install && npm run build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@hyperoslo/eslint-config": "^2.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "gh-pages": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "stylus": "^0.54.5"
  }
}
